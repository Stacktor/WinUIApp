<Page
    x:Class="WinUIApp.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:local="using:WinUIApp"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Spacing="20">
            <TextBlock Text="Login" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBox x:Name="UsernameTextBox" PlaceholderText="Username"/>
            <PasswordBox x:Name="PasswordBox" PlaceholderText="Password"/>
            <CheckBox x:Name="RememberMeCheckBox" Content="Remember Me" />
            <Button Content="Login" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
